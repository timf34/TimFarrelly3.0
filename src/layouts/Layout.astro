---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Tim Farrelly" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400;0,600;1,400&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <!-- Dev Grid (press 'g' to toggle) -->
    <div class="dev-grid">
      <div class="line" style="left: 10%"></div>
      <div class="line" style="left: 25%"></div>
      <div class="line line-center" style="left: 50%"></div>
      <div class="line" style="left: 75%"></div>
    </div>

    <slot />

    <script>
      document.addEventListener('keydown', (e) => {
        if (e.key === 'g') document.querySelector('.dev-grid')?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    background: #F4F4F0;
  }

  body {
    font-family: "EB Garamond", serif;
    font-size: 1.2rem;
    line-height: 1.55;
    color: #0e202f;
    margin: 0;
  }

  a {
    color: inherit;
    text-decoration-thickness: 1px;
    text-underline-offset: 3px;
  }

  a:hover {
    text-decoration-thickness: 2px;
  }

  /* Dev Grid */
  .dev-grid {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 9999;
  }

  .dev-grid.hidden {
    display: none;
  }

  .dev-grid::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 50vh;
    height: 1px;
    background: rgba(0, 255, 0, 0.4);
  }

  .line {
    position: absolute;
    top: 0;
    bottom: 0;
    border-left: 1px solid rgba(255, 0, 0, 0.25);
  }

  .line-center {
    border-left-color: rgba(0, 0, 255, 0.25);
  }
</style>
