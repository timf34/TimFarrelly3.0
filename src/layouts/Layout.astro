---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Tim Farrelly - Building at Field of Vision, running Patch, and exploring AI research" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400;0,600;1,400&family=Roboto+Mono&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <div class="noise-gradient"></div>
    <div class="two-pane">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html {
    background-color: #e6e1d4;
    scroll-behavior: smooth;
  }

  .noise-gradient {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    opacity: 0.15;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  }

  body {
    font-family: "EB Garamond", serif;
    font-size: 1.4rem;
    margin: 0;
    color: #0e202f;
    line-height: 1.6;
  }

  a {
    color: #0e202f;
  }

  .two-pane {
    display: flex;
    height: 100vh;
    position: relative;
  }

  #main-content {
    box-sizing: border-box;
    padding: 10vh 4em 10vh 6em;
    flex: 0 0 50%;
    max-height: 100vh;
    overflow-y: auto;
  }

  #canvas-pane {
    box-sizing: border-box;
    flex: 0 0 50%;
    max-height: 100vh;
    overflow: hidden;
    border-left: 2px solid rgba(169, 186, 164, 0.2);
    position: relative;
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  #canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    animation: fadeIn ease 2s;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5em;
    font-weight: 600;
  }

  h5 {
    font-family: "Roboto Mono", monospace;
    font-size: 1rem;
    margin-top: 2em;
    margin-bottom: 0.5em;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.7;
  }

  p {
    margin: 1em 0;
  }

  ul {
    padding-left: 1.25em;
    margin: 0.5em 0;
  }

  li {
    margin: 0.3em 0;
  }

  .socials {
    opacity: 0.5;
    padding: 2em 0;
    list-style: none;
    font-family: "Roboto Mono", monospace;
    font-size: 1rem;
  }

  .socials li {
    margin: 0.5em 0;
  }

  .email {
    font-family: "Roboto Mono", monospace;
    font-size: 1rem;
    opacity: 0.7;
  }

  @media only screen and (max-width: 900px), only screen and (orientation: portrait) {
    .two-pane {
      display: block;
    }

    #canvas-pane {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      border-left: none;
      opacity: 0.3;
    }

    #main-content {
      max-height: none;
      overflow-y: visible;
      padding: 8vh 2em;
      background: rgba(230, 225, 212, 0.9);
    }

    .socials {
      margin-top: 3em;
    }
  }

  @media all and (max-width: 1200px) {
    #main-content {
      padding: 8vh 3em;
    }
  }
</style>